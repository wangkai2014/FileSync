<Window x:Class="FileSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSync"
        mc:Ignorable="d"
        Title="FileSync" Height="263.079" Width="410.425"
        ResizeMode="NoResize">
    <Window.DataContext>
        <local:UIContext/>
    </Window.DataContext>
    <Grid>
        <Button Name="AddMappingBtn" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="318,37,0,0" Click="AddMappingBtn_Click"/>
        <Button Name="RemoveMappingBtn" Content="Remove" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="318,62,0,0" Click="RemoveMappingBtn_Click"/>
        <Button Name="SyncAllBtn" Content="Sync all" HorizontalAlignment="Left" Margin="318,197,0,0" VerticalAlignment="Top" Width="70" Click="SyncAllBtn_Click"/>
        <Button Name="LoadOtherListBtn" Content="Load list" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="318,12,0,0" Click="LoadOtherListBtnBtn_Click"/>
        <DataGrid Name="MappingsDataGrid" ItemsSource="{Binding Path=MappingRows}" HorizontalAlignment="Left" Height="207" Margin="10,10,0,0" VerticalAlignment="Top" Width="303" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Left" Binding="{Binding LeftPath}" />
                <DataGridTemplateColumn Header="&lt;&gt;" Width="SizeToHeader" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding SyncIcon}" Stretch="Uniform"></Image>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Right" Binding="{Binding RightPath}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
